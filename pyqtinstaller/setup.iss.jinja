; -- 64Bit.iss --
; Demonstrates installation of a program built for the x64 (a.k.a. AMD64)
; architecture.
; To successfully run this installation and the program it installs,
; you must have a "x64" edition of Windows.

; SEE THE DOCUMENTATION FOR DETAILS ON CREATING .ISS SCRIPT FILES!

[Setup]
AppName={{app_name}}
AppVersion={{app_version}}
DefaultDirName={pf}\{{app_name}}
DefaultGroupName={{app_name}}
UninstallDisplayIcon={app}\{{resources_dir}}\{{app_icon}}
Compression=lzma2
SolidCompression=yes
OutputBaseFilename={{installer_filename}}
OutputDir=.
; "ArchitecturesAllowed=x64" specifies that Setup cannot run on
; anything but x64.
ArchitecturesAllowed=x64
; "ArchitecturesInstallIn64BitMode=x64" requests that the install be
; done in "64-bit mode" on x64, meaning it should use the native
; 64-bit Program Files directory and the 64-bit view of the registry.
ArchitecturesInstallIn64BitMode=x64

[CustomMessages]
CreateStartMenuIcon=Create a &start menu icon
InstallingVCRedist=Installing VC++ 2015 Redistributables...

[Files]
; App Files
Source: "{{package}}.exe"; DestDir: "{app}"
{%- for e in external_exe_files %}
Source: {{e}}; DestDir: "{app}"
{%- endfor %}
Source: "*.dll"; DestDir: "{app}"
Source: "*.pyd"; DestDir: "{app}"
Source: "platforms\*.dll"; DestDir: "{app}\platforms"
; Resources
Source: "{{resources_dir}}\*"; DestDir: "{app}\{{resources_dir}}"; Flags: recursesubdirs
Source: "translations\*"; DestDir: "{app}\translations"; Flags: recursesubdirs
{%- if qtquick_modules %}
; QML
Source: qml\*; DestDir: "{app}\qml"; Flags: recursesubdirs
Source: {{package}}\*; DestDir: "{app}\{{package}}"; Flags: recursesubdirs
{%- endif %}
; Python
Source: packages\*; DestDir: "{app}\packages"; Flags: recursesubdirs
; Additional Files
{%- for f in additional_files %}
Source: {{f}}; DestDir: {app}
{%- endfor %}
; Temp Files
Source: vcredist_x64.exe; DestDir: {tmp}
; Additional temp files
{%- for f in additional_temp_files %}
Source: {{f}}; DestDir: {tmp}
{%- endfor %}

[Tasks]
Name: "desktopicon"; Description: "{cm:CreateDesktopIcon}"; GroupDescription: "{cm:AdditionalIcons}"; Flags: unchecked
Name: "startmenuicon"; Description: "{cm:CreateStartMenuIcon}"; GroupDescription: "{cm:AdditionalIcons}"; Flags: unchecked

[Run]
Filename: {tmp}\vcredist_x64.exe; Parameters: "/q /passive /Q:a /c:""msiexec /q /i vcredist.msi"""; StatusMsg: {cm:InstallingVCRedist}
{%- for rc in run_commands %}
Filename: {{rc['command']}}; Parameters: "{{rc['parameters']}}"; StatusMsg: {{rc['status']}}
{%- endfor %}

[Icons]
Name: "{userdesktop}\{{app_name}}"; Filename: "{app}\{{package}}.exe"; IconFilename: "{app}\{{resources_dir}}\{{app_icon}}"; Tasks: desktopicon
Name: "{group}\{{app_name}}"; Filename: "{app}\{{package}}.exe"; WorkingDir: "{app}"; IconFilename: "{app}\resources\test_icon.ico"; Tasks: startmenuicon
Name: "{group}\{cm:UninstallProgram,{{app_name}}}"; Filename: "{uninstallexe}"; IconFilename: "{app}\resources\test_icon.ico"; Tasks: startmenuicon